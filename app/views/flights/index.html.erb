<h1>All Flights</h1>
<% @flights.each do |flight| %>
<ul>
  <section id="flight-<%=flight.id %>"> Flight: <li> <%=flight.number %> Airline: <%=flight.airline.name %>  </li>
    <%flight.passengers.each do |passenger| %>
      <ul>
        <section id="passenger-<%=passenger.id %>">
          <li> <%=passenger.name %> <%=button_to "Remove Passenger", "/flights/#{flight.id}/#{passenger.id}", method: :delete  %> </li>
        </section>
      </ul>
    <%end %>
  </section>
  </ul>
<% end %>
